    <script>
        function sendWhatsAppMessage(event) {
          event.preventDefault(); // Prevent the default form submission
        
          // Retrieve form values
          const name = encodeURIComponent(document.getElementById('uf-iname').value.trim());
          const email = encodeURIComponent(document.getElementById('uf-imail').value.trim());
          const message = encodeURIComponent(document.getElementById('uf-itextarea').value.trim());
        
          // Define phone number and WhatsApp link
          const phoneNumber = '+919993534374';
          const whatsappLink = `https://api.whatsapp.com/send?phone=${phoneNumber}&text=Hi%20there%20👋,%0A%0AI'm%20${name}.%0AI%20wanted%20to%20get%20in%20touch%20regarding%20your%20service%20or%20product.%0A%0AHere%20are%20my%20details:%0A%0A📧%20Email:%20${email}%0A💬%20Message:%20${message}.%0A%0AThank%20you%20and%20I%20look%20forward%20to%20hearing%20from%20you%20soon%20😊!`;
        
          // Open WhatsApp link in a new tab
