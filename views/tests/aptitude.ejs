    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Aptitude Questions</title>
        <!--font-awesome linking-->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
        <style>
            body {
                font-family: Arial, sans-serif;
                background-color: #f5f5f5;
                margin: 0;
                padding: 0;
                display: flex;
                overflow-x: hidden; /* Prevent horizontal scroll */
            }
            .container {
                display: flex;
                width: 100%;
            }
            .sidebar {
                width: 20%;
                background-color: #333;
                color: white;
                padding: 20px;
                box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
                display: flex;
                flex-direction: column;
                position: fixed; /* Fixed position */
                height: 100vh; /* Full height */
                overflow-y: auto; /* Enable scrolling if needed */
            }
            .sidebar h2 {
                color: #fff;
            }
            .numbered-list {
                display: flex;
                flex-wrap: wrap;
                gap: 8px;
                list-style-type: none;
                padding: 0;
            }
            .numbered-list li {
                text-align: center;
                background-color: #111111;
                color: #fff;
                padding: 14px;
                margin: 5px 0;
                border-radius: 15%;
                width: 6%;
                font-size: larger;
                font-weight: bolder;
                cursor: pointer;
            }
            .content {
                width: 75%;
                padding: 20px;
                margin-left: 23%; 
                margin-top: 25px;
                position: relative; 
            }
            .top-bar {
                position: fixed;
                top: 0;
                left: 20%; /* Align with the content area */
                right: 0;
                background-color: #333;
                color: white;
                padding: 10px;
                text-align: center;
                z-index: 1000;
            }
            .top-bar #timer {
                position: relative;
                left: 40%;
                font-size: xx-large;
            }
            h1 {
                text-align: center;
                color: #333;
            }
            .question {
                background-color: #fafafa;
                padding: 15px;
                margin-bottom: 20px;
                border-radius: 8px;
                box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
            }
            .question h2 {
                font-size: 18px;
                color: #444;
            }
            .options {
                list-style-type: none;
                padding-left: 0;
            }
            .options li {
                padding: 10px;
                margin: 5px 0;
                border-radius: 5px;
                cursor: pointer;
                transition: background-color 0.3s;
            }
            .options li:hover {
                font-weight: bold;
            }
            #buttonControl{
                display: flex;
                gap: 20px;
            }
            #buttonControl button {
                display: block;
                width: 15%;
                padding: 10px;
                background-color: #000;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
                font-size: 16px;
                margin-top: 20px;
            }
            #buttonControl button:hover {
                background-color: #063e5f;
            }
            @media screen and (max-width: 468px) {
                .container {
                    flex-direction: row;
                }
                .sidebar {
                    width: 20%;
                    position: fixed;
                    height: 100vh; /* Full height */
                    overflow-y: auto; /* Enable scrolling if needed */
                }
                .content {
                    margin-left: 20%;
                }
                .top-bar {
                    left: 20%; /* Align with the content area */
                    width: calc(100% - 20%);
                }
                .numbered-list li {
                    width: 6%;
                }
            }
        </style>
    </head>
    <body>
        <div class="container">
            <div class="sidebar">
                <h2>Total Questions</h2>
                <ul class="numbered-list">
                    <% for (let i = 1; i <= questions.length; i++) { %>
                        <li onclick="showQuestion(<%= i %>)"><%= i %></li>
                    <% } %>
                </ul>
            </div>
            <div class="content">
                <div class="top-bar">
                    <span id="timer">30:00</span>
                </div>
                <h1>Aptitude Questions</h1>
                <% questions.forEach(function(question, index) { %>
                <div class="question" id="question-<%= index + 1 %>" style="display: none;">
                    <h3><b>Question <%= index + 1 %>: </b></h3><h2><%= question.question_text %></h2>
                    <ul class="options">
                        <li>A. <%= question.option_a %></li>
                        <li>B. <%= question.option_b %></li>
                        <li>C. <%= question.option_c %></li>
                        <li>D. <%= question.option_d %></li>
                    </ul>
                </div>
                <% }); %>
                <div id="buttonControl">
                    <button type="button"><i class="fas fa-chevron-left"></i> Previous</button>
                    <button type="button">Next <i class="fas fa-chevron-right"></i></button>
                </div>
            </div>
        </div>

        <script>
            function startTimer(duration, display) {
                var timer = duration, minutes, seconds;
                setInterval(function () {
                    minutes = parseInt(timer / 60, 10);
                    seconds = parseInt(timer % 60, 10);
                    minutes = minutes < 10 ? "0" + minutes : minutes;
                    seconds = seconds < 10 ? "0" + seconds : seconds;
                    display.textContent = minutes + ":" + seconds;
                    if (--timer < 0) {
                        timer = 0;
                    }
                }, 1000);
            }

            window.onload = function () {
                var thirtyMinutes = 60 * 30,
                    display = document.querySelector('#timer');
                startTimer(thirtyMinutes, display);
            };

            function showQuestion(questionNumber) {
                // Hide all questions
                var questions = document.querySelectorAll('.question');
                questions.forEach(function(question) {
                    question.style.display = 'none';
                });
                
                // Show the selected question
                var selectedQuestion = document.getElementById('question-' + questionNumber);
                if (selectedQuestion) {
                    selectedQuestion.style.display = 'block';
                }
            }
        </script>
    </body>
    </html>
