<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Questions</title>
    <!-- local css -->
    <link rel="stylesheet" href="/css/admin_dashboard.css">
    <!-- Bootstrap cdn  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!--font-awesome linking-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .content {
            width: 100%;
            padding: 20px;
            position: relative; 
        }

        #control{
            width: 25%;
            float: right;
            display: flex;
            justify-content: center;
            gap: 10px;
        }
        
        .button_delete,.button_edit {
            padding: 5px;
            cursor: pointer;
            border: 1px solid #ccc;
        }
        
        h1 {
            text-align: center;
            color: #333;
        }
        .question {
            background-color: #fafafa;
            padding: 15px;
            margin-bottom: 20px;
            border-radius: 8px;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
        }
        .question h2 {
            font-size: 18px;
            color: #444;
        }
        .options {
            list-style-type: none;
            padding-left: 0;
        }
        .options li {
            padding: 10px;
            margin: 5px 0;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .options li:hover {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <nav class="navbar bg-primary">
        <div class="container-fluid px-5">
            <a class="navbar-brand text-white"><b>Admin Panel</b></a>
            <form class="d-flex" role="search">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-dark" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <div class="main_container">
        <div class="left_side_panel">
            <img src="/images/profile.png" alt="" width="70%" class="profile_image" style="outline: 2px solid #fff; outline-offset: 2px; border-radius: 50%;"> 
            <div class="d-flex flex-column gap-3">
                <a href="/logout"><i class="fas fa-sign-out-alt text-light fs-4" title="Signout"></i></a>
                <i class="fas fa-cog text-light fs-4" title="Setting"></i>
            </div>
        </div>
        <div class="middel_side_panel">
            <ul class="p-0">
                <a href="/adminDashboard"><li><i class="fas fa-th"></i> Dashboard</li></a>
                <a href="/allUsres"><li><i class="fas fa-users"></i> All Users</li></a>
                <a href=""><li><i class="fab fa-react"></i> Course Categories</li></a>
                <a href="/uploadQuestions"><li><i class="fas fa-upload"></i> Upload Questions</li></a>
                <a href="/manageQuestions"><li><i class="fas fa-tasks"></i> Manage Questions</li></a>
                <a href=""><li><i class="fas fa-clipboard"></i> Course Tests</li></a>
                <a href=""><li><i class="fas fa-clipboard-check"></i> Result</li></a>
                <a href=""><li><i class="fas fa-book-open"></i> Reports</li></a>
                <a href=""><li><i class="fas fa-certificate"></i> Certificates</li></a>
                <a href=""><li><i class="fas fa-poll"></i> Ranking</li></a>
                <a href=""><li><i class="fas fa-rupee-sign"></i> Earning</li></a>
                <a href=""><li><i class="fas fa-user-lock"></i> Admin Profile</li></a>
                <a href=""><li><i class="fas fa-comment-alt"></i> Feedbacks</li></a>
            </ul>
        </div>
        <div class="right_side_panel">
            <div class="d-flex shadow-sm p-2 border">
                <div><h5>Filters</h5></div>
                <div class="ms-auto filter">
                    <select name="" id="">
                        <option value="">Categories</option>
                        <option value="">SSC GD</option>
                        <option value="">SSC MTS</option>
                        <option value="">UPSC</option>
                    </select>
                    <select name="" id="">
                        <option value="">Subject</option>
                        <option value="Aptitude">Aptitude</option>
                        <option value="Maths">Maths</option>
                        <option value="English">English</option>
                    </select>
                    <select name="" id="">
                        <option value="">Difficulty Level</option>
                        <option value="Easy">Easy</option>
                        <option value="Medium">Medium</option>
                        <option value="Hard">Hard</option>
                    </select>
                    <select name="" id="">
                        <option value="">Categories</option>
                        <option value="">SSC GD</option>
                        <option value="">SSC MTS</option>
                        <option value="">UPSC</option>
                    </select>
                </div>
            </div>
            <h1>All Questions</h1>
            <div class="content">
                <% questions.forEach(function(question, index) { %>
                    <div id="control">
                        <form method="GET" action="/manageQuestions/<%=question.question_id%>/edit">
                            <button class="button_edit"><i class="fas fa-edit"></i> Edit</button>
                        </form>
                        <form method="POST" action="/manageQuestions/<%=question.question_id%>?_method=delete">
                            <button class="button_delete"><i class="fas fa-trash"></i> Delete</button>
                        </form>
                    </div>
                    <div class="question" id="question-<%= index + 1 %>">
                    <p>Question Id: <%= question.question_id %></p>
                    <h5><b>Question <%= index + 1 %>: </b></h5><h2><%= question.question_text %></h2>
                    <ul class="options">
                        <li>A. <%= question.option_a %></li>
                        <li>B. <%= question.option_b %></li>
                        <li>C. <%= question.option_c %></li>
                        <li>D. <%= question.option_d %></li>
                    </ul>
                    <h2>Correct Answer: <%= question.correct_option%></h2>
                </div>
                <% }); %>
            </div>
            <!-- <ul>
                <% questions.forEach(function(question) { %>
                    <li>
                        <h2><%= question.question_text %></h2>
                        <ul class="options">
                            <li>A. <%= question.option_a %></li>
                            <li>B. <%= question.option_b %></li>
                            <li>C. <%= question.option_c %></li>
                            <li>D. <%= question.option_d %></li>
                        </ul>
                        <hr>
                    </li>
                <% }); %>
            </ul> -->
        </div>
    </div>
    <!-- bootstrap cdn -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
