<% layout("/layouts/adminBoilerplate") %>

        <div class="right_side_panel p-4">
            <h3>Update Questions</h3>
            <form id="uploadForm" action="/manageQuestions/<%=result.question_id%>?_method=put" method="POST">
                <div class="mb-3">
                    <label for="questionText" class="form-label">Question Text</label>
                    <textarea type="text" class="form-control" id="questionText" name="question_text" required><%=result.question_text %></textarea>
                </div>
                <div class="mb-3">
                    <label for="optionA" class="form-label">Option A</label>
                    <input type="text" class="form-control" id="optionA" name="option_a" value="<%=result.option_a %>" required>
                </div>
                <div class="mb-3">
                    <label for="optionB" class="form-label">Option B</label>
                    <input type="text" class="form-control" id="optionB" name="option_b" value="<%=result.option_b %>" required>
                </div>
                <div class="mb-3">
                    <label for="optionC" class="form-label">Option C</label>
                    <input type="text" class="form-control" id="optionC" name="option_c" value="<%=result.option_c %>" required>
                </div>
                <div class="mb-3">
                    <label for="optionD" class="form-label">Option D</label>
                    <input type="text" class="form-control" id="optionD" name="option_d" value="<%=result.option_d %>" required>
                </div>
                <div class="mb-3">
                    <label for="correctOption" class="form-label">Correct Option (A/B/C/D)</label>
                    <select class="form-control" name="correct_option" id="correctOption" required>
                        <option>--Select Correct Option--</option>
                        <option value="A" <%= result.correct_option === 'A' ? 'selected' : '' %>>A</option>
                        <option value="B" <%= result.correct_option === 'B' ? 'selected' : '' %>>B</option>
                        <option value="C" <%= result.correct_option === 'C' ? 'selected' : '' %>>C</option>
                        <option value="D" <%= result.correct_option === 'D' ? 'selected' : '' %>>D</option>
                    </select>
                    
                </div>
                <div class="mb-3">
                    <label for="difficultyLevel" class="form-label">Difficulty Level</label>

                    <select class="form-control" name="difficulty_level" id="difficultyLevel" required>
                        <option>--Select Difficulty Level--</option>
                        <option value="Easy" <%= result.difficulty_level === 'Easy' ? 'selected' : '' %>>Easy</option>
                        <option value="Medium" <%= result.difficulty_level === 'Medium' ? 'selected' : '' %>>Medium</option>
                        <option value="Hard" <%= result.difficulty_level === 'Hard' ? 'selected' : '' %>>Hard</option>
                    </select>
                    
                </div>
                <!-- <div class="mb-3">
                    <label for="subjects" class="form-label">Subjects Name</label>
                    <select class="form-control" name="subjects" id="subjects" required>
                        <option>--Select Subjects Name--</option>
                        <option value="aptitude_questions">Aptitude</option>
                        <option value="maths_questions">Maths</option>
                        <option value="english_questions">English</option>
                    </select>
                </div> -->
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
