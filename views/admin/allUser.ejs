<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Questions</title>
    <!-- Local CSS -->
    <link rel="stylesheet" href="/css/admin_dashboard.css">
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .right_side_panel {
            display: block;
            overflow-x: auto;
            max-width: 100%;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            font-size: 18px;
            text-align: left;
        }


        th {
            padding: 12px;
            background-color: #c9caf0e7;
        }

        tr:hover {
            background-color: #cce4f8d8;
        }
    </style>
</head>
<body>
    <nav class="navbar bg-primary">
        <div class="container-fluid px-5">
            <a class="navbar-brand text-white"><b>Admin Panel</b></a>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-dark" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <div class="main_container">
        <div class="left_side_panel">
            <img src="/images/profile.png" alt="" width="70%" class="profile_image" style="outline: 2px solid #fff; outline-offset: 2px; border-radius: 50%;"> 
            <div class="d-flex flex-column gap-3">
                <a href="/logout"><i class="fas fa-sign-out-alt text-light fs-4" title="Signout"></i></a>
                <i class="fas fa-cog text-light fs-4" title="Settings"></i>
            </div>
        </div>
        <div class="middel_side_panel">
            <ul class="p-0">
                <a href="/adminDashboard"><li><i class="fas fa-th"></i> Dashboard</li></a>
                <a href="/allUsres"><li><i class="fas fa-users"></i> All Users</li></a>
                <a href="/courseCategories"><li><i class="fab fa-react"></i> Course Categories</li></a>
                <a href="/uploadQuestions"><li><i class="fas fa-upload"></i> Upload Questions</li></a>
                <a href="/manageQuestions"><li><i class="fas fa-tasks"></i> Manage Questions</li></a>
                <a href=""><li><i class="fas fa-clipboard"></i> Course Tests</li></a>
                <a href=""><li><i class="fas fa-clipboard-check"></i> Result</li></a>
                <a href=""><li><i class="fas fa-book-open"></i> Reports</li></a>
                <a href=""><li><i class="fas fa-certificate"></i> Certificates</li></a>
                <a href=""><li><i class="fas fa-poll"></i> Ranking</li></a>
                <a href=""><li><i class="fas fa-rupee-sign"></i> Earning</li></a>
                <a href=""><li><i class="fas fa-user-lock"></i> Admin Profile</li></a>
                <a href=""><li><i class="fas fa-comment-alt"></i> Feedbacks</li></a>
            </ul>
        </div>
        <div class="right_side_panel p-4 m-3">
            <h3 class="py-4">All Users List</h3>
            <table >
                <thead>
                    <tr>
                        <th>ID</th>
                        <th class="w-25">Full Name</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th class="w-25" >Last Login</th>
                        <th>Payment Mode</th>
                        <th>Plan</th>
                        <th>Remember Password</th>
                        <th>Register Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(user => { %>
                        <tr>
                            <td><%= user.ID %></td>
                            <td><%= user.FULLNAME %></td>
                            <td><%= user.EMAIL %></td>
                            <td><%= user.STATUS %></td>
                            <td><%= user.LAST_LOGIN ? user.LAST_LOGIN.toISOString().slice(0, 10) : 'N/A' %></td>
                            <td><%= user.PAYMENT_MODE %></td>
                            <td><%= user.PLAN %></td>
                            <td><%= user.REMEMBER_PASSWORD ? 'Yes' : 'No' %></td>
                            <td><%= user.REGISTER_DATE.toISOString().slice(0, 19).replace('T', ' ') %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <!-- Bootstrap CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
