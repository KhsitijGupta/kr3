<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Questions</title>
    <!-- Local CSS -->
    <link rel="stylesheet" href="/css/admin_dashboard.css">
    <!-- Bootstrap CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .card {
            width: 200px;
            height: 175px;
            border-radius: 10px;
            background-color: #e9eef7;
        }
        .card a {
            align-self: last baseline;
            margin-top: 30%;
            margin-right: 5px;
        }
        #allCourse {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            height: fit-content;
            gap: 40px;
        }
        #TableForm {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        #TableForm i {
            font-size: 80px;
            color: #ccc;
            margin-bottom: 15px;
        }
    </style>
</head>
<body>
    <nav class="navbar bg-primary">
        <div class="container-fluid px-5">
            <a class="navbar-brand text-white"><b>Admin Panel</b></a>
            <form class="d-flex" role="search">
                <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-dark" type="submit">Search</button>
            </form>
        </div>
    </nav>
    <div class="main_container">
        <div class="left_side_panel">
            <img src="/images/profile.png" alt="" width="70%" class="profile_image" style="outline: 2px solid #fff; outline-offset: 2px; border-radius: 50%;"> 
            <div class="d-flex flex-column gap-3">
                <a href="/logout"><i class="fas fa-sign-out-alt text-light fs-4" title="Signout"></i></a>
                <i class="fas fa-cog text-light fs-4" title="Settings"></i>
            </div>
        </div>
        <div class="middel_side_panel">
            <ul class="p-0">
                <a href="/adminDashboard"><li><i class="fas fa-th"></i> Dashboard</li></a>
                <a href="/allUsres"><li><i class="fas fa-users"></i> All Users</li></a>
                <a href="/courseCategories"><li><i class="fab fa-react"></i> Course Categories</li></a>
                <a href="/uploadQuestions"><li><i class="fas fa-upload"></i> Upload Questions</li></a>
                <a href="/manageQuestions"><li><i class="fas fa-tasks"></i> Manage Questions</li></a>
                <a href=""><li><i class="fas fa-clipboard"></i> Course Tests</li></a>
                <a href=""><li><i class="fas fa-clipboard-check"></i> Result</li></a>
                <a href=""><li><i class="fas fa-book-open"></i> Reports</li></a>
                <a href=""><li><i class="fas fa-certificate"></i> Certificates</li></a>
                <a href=""><li><i class="fas fa-poll"></i> Ranking</li></a>
                <a href=""><li><i class="fas fa-rupee-sign"></i> Earning</li></a>
                <a href=""><li><i class="fas fa-user-lock"></i> Admin Profile</li></a>
                <a href=""><li><i class="fas fa-comment-alt"></i> Feedbacks</li></a>
            </ul>
        </div>
        <div class="right_side_panel p-5 d-block">
            <h3 class="my-4">Subject Available</h3>
            <div id="allCourse">
                <% tables.forEach(table => { %>
                    <div class="row h-100">
                        <div class="card">
                            <h6 class="text-center py-2 fw-bold">
                                <%= table.originalTableName.replace(/_/g, ' ').toUpperCase() %></h6>
                            <div class="d-flex justify-content-between px-2 fw-bold">
                                <div class="text-center">Easy <div> 34 </div></div>
                                <div class="text-center">Medium <div> 22 </div></div>
                                <div class="text-center">Hard <div> 32 </div></div>
                            </div>
                            <a href="#" class="text-decoration-none ">view</a>
                        </div>
                    </div>
                <%})%>
                <div class="row h-100">
                    <div class="card d-flex flex-column align-items-center">
                        <h6 class="text-center py-2 fw-bold">Create New Subject</h6>
                        <form action="/courseCategories" method="POST" id="TableForm">
                            <button type="submit" class="border border-0 bg-transparent"><i class="fas fa-plus-circle"></i></button>
                            <input type="text" name="newTable" placeholder="Enter New Subject Name" required>
                        </form>
                    </div>
                </div>
                <div class="row h-100">
                    <div class="card d-flex flex-column align-items-center">
                        <h6 class="text-center py-2 fw-bold">Delete Subject Table</h6>
                        <form action="/courseCategories/delete" method="POST" id="TableForm">
                            <button type="submit"  class="border border-0 bg-transparent">
                                <i class="fas fa-trash-alt" ></i></button>
                            <select class="form-control py-0" name="deleteTable">
                                <option>--- Choose Table ---</option>
                                <% tables.forEach(table => { %>
                                <option><%= table.originalTableName.replace(/_/g, ' ').toUpperCase() %></option>
                                <%})%>
                            </select>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Bootstrap CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
